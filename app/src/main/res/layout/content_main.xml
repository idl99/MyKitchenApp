<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="48dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_button_registerproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="registerProduct"
            android:text="Register Products"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_button_displayproducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="displayProducts"
            android:text="Display Products"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_button_availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkAvailability"
            android:text="Availability"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_button_editproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="editProduct"
            android:text="Edit Products"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_button_searchproducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="search"
            android:text="Search Products"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_button_findrecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="findRecipes"
            android:text="Find Recipes"
            app:cornerRadius="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>